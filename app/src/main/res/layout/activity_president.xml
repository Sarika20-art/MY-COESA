<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".president">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="APPLICATION FORM"
        android:textSize="30dp"
        android:textAlignment="center"
        />

    <EditText
        android:layout_width="338dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:hint="Enter Your Full Name" />

    <EditText
        android:layout_width="338dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:hint="Enter Your Enrollment No. " />

    <EditText
        android:layout_width="338dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:hint="Last Semester Percentage" />

    <TextView
        android:layout_width="337dp"
        android:layout_height="38dp"
        android:text="Was in previous COESA comittee or not ?"
        android:textSize="17dp"
        android:layout_marginTop="14dp"/>

    <RadioGroup

        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp">

        <RadioButton
            android:id="@+id/radio_yes"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="checkButton"
            android:text="Yes"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_no"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="checkButton"
            android:layout_marginLeft="4dp"
            android:text="No"/>
    </RadioGroup>
    <Button
        android:id="@+id/Experience"
        android:text="EXPERIENCE"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <TextView
        android:id="@+id/text_view_selected"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="Do you have experience:"
        />

    <TextView
        android:layout_width="388dp"
        android:layout_height="41dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="14dp"
        android:text="If Yes then Select the post:"
        android:textSize="17dp"/>

    <Spinner
        android:id="@+id/spinner11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="14dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="14dp"
        android:hint="Write about ur qualities that you think makes t=you deserving forthis post" />

    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="Submit"
        android:layout_marginTop="10dp"
        />

</LinearLayout>